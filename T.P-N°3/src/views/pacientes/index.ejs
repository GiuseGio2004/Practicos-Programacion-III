<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Listado de Pacientes</title>
  <link rel="stylesheet" href="/stylesheets/paciente.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Lista de Pacientes</h1>
    <p class="subtitulo">AquI pod√©s consultar, gestionar o eliminar pacientes registrados.</p>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>DNI</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Email</th>
          <th>Turnos</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% pacientes.forEach(paciente => { %>
          <tr>
            <td><%= paciente.id %></td>
            <td><%= paciente.dni %></td>
            <td><%= paciente.nombre %></td>
            <td><%= paciente.apellido %></td>
            <td><%= paciente.email %></td>
            <td>
              <div class="turnos">
                <% if (paciente.turnos.length > 0) { %>
                  <% paciente.turnos.forEach(turno => { %>
                    <div class="turno">
                      <strong>Fecha:</strong> <%= turno.fecha %> -
                      <strong>Hora:</strong> <%= turno.hora %>
                    </div>
                  <% }) %>
                <% } else { %>
                  <em>Sin turnos</em>
                <% } %>
              </div>
            </td>
            <td>
              <form method="POST" action="/pacientes/eliminar/<%= paciente.id %>" style="display:inline;">
                <button type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="acciones">
      <a href="/pacientes/nuevo" class="btn-principal">Nuevo Paciente</a>
    </div>
  </div>
</body>
</html>